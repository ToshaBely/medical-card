<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <converter>
        <converter-for-class>java.lang.Enum</converter-for-class>
        <converter-class>javax.faces.convert.EnumConverter</converter-class>
    </converter>

    <converter>
        <converter-for-class>java.lang.String</converter-for-class>
        <converter-class>com.bsu.bely.medical.converter.StringConverter</converter-class>
    </converter>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>

        <navigation-case>
            <from-outcome>hello</from-outcome>
            <to-view-id>/template/main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>thermalSheet</from-outcome>
            <to-view-id>/page/thermal-sheet.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>patients</from-outcome>
            <to-view-id>/page/patients.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>personal</from-outcome>
            <to-view-id>/page/personal.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>healthStatus</from-outcome>
            <to-view-id>/page/health-status.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

    </navigation-rule>

    <converter>
        <converter-id>patientConverter</converter-id>
        <converter-class>com.bsu.bely.medical.converter.PatientConverter</converter-class>
    </converter>
  
</faces-config>